.distance-comparison
  %h3.page-header
    ="#{title} - "
    =matched(match)
  .row.description
    .col-md-12
      %p
        =description
  %h4.page-header
    metrics
  .row.metrics
    .col-md-4
      %h5.center-title
        ="#{type} detected in original:"
        %span= original_count
    .col-md-4.center
      %h5.center-title
        ="#{type} detected in altered:"
        %span= altered_count
    .col-md-4
      %h5.center-title
        Levenshtein distance from original to altered:
        %span= distance
  %h4.page-header
    data
  .row.data
    .col-md-4
      %h4.center-title
        ="#{type} unique to original:"
      %p= original_components
    .col-md-4
      %h4.center-title
        ="#{type} in original and altered:"
      %p= intersection
    .col-md-4
      %h4.center-title
        ="#{type} unique to altered:"
      %p= altered_components
