-if !current_user
  .row.form.register
    .col-md-8.col-md-offset-2.login-container
      %button.exit.pull-right.btn
        x
      .row
        %h2 Create Account
        = form_for(@user) do |f|
          = f.email_field :email, class: 'form-control', placeholder: 'email'
          = f.password_field :password, class: 'form-control', placeholder: 'password'
          = f.submit 'Submit', class: 'btn-lg pull-right'
